<project name="phing-drupal" default="build">
  <!-- ### Run Behat tests

Execution of this target can be skipped by setting the
 `project.behat.skip` property from the command line or in other targets.
-->
  <target name="behat" if="env">
    <echo>Creating behat.yml file.</echo>
    <copy file="behat.yml.dist" tofile="behat.yml" overwrite="true">
      <filterchain>
        <expandproperties />
      </filterchain>
    </copy>

    <echo>Running tests.</echo>
    <exec command="behat --format=junit --out=${project.testdir}"></exec>

  </target>
</project>